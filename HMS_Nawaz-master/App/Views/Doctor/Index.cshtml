@model IEnumerable<App.Models.EntityModels.Doctor>

@{
    ViewData["Title"] = "DoctorList";
}

<!--**********************************
    Content body start
***********************************-->
<div class="content-body">
    <!-- row -->
    <div class="container-fluid">
        <div class="form-head align-items-center d-flex mb-sm-4 mb-3">
            <div class="mr-auto">
                <h2 class="text-black font-w600">Doctors List</h2>
            </div>
            <div>
                <a asp-controller="Doctor" asp-action="AddDoctor" class="btn btn-primary mr-3" data-target="#addOrderModal">+New Doctor</a>
                
            </div>
        </div>
        
        <div class="row">
            <div class="col-xl-12">
                <div class="table-responsive card-table">
                    <table id="example5" class="display dataTablesCard white-border table-responsive-xl">
                        <thead>
                            <tr>
                                <th>Dr_Name</th>
                                <th>Specialty</th>
                                <th>Education</th>
                                <th>Experience</th>
                                <th>Status</th>
                                <th>ContactInformation</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Dr_Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Specialty)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Education)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Experience)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Status)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ContactInformation)
                                    </td>
                                   
                                    <td>
                                       
                                        <a asp-action="Delete" asp-route-id="@item.Dr_ID">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!--**********************************
    Content body end
***********************************-->
@section scripts {
    <!-- Datatable -->
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/datatables.init.js"></script>

}