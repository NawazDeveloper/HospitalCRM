@model App.Models.Identity.UserLoginModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>AMU - Medical CRM</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="images/favicon.png">
    <link href="css/style.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&amp;family=Roboto:wght@100;300;400;500;700;900&amp;display=swap" rel="stylesheet">
</head>
<style>
    body {
        background-image: url('images/login-bg.jpeg');
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>

<body class="h-100">
    <div class="authincation h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
                                    <div class="text-center mb-3">
                                        <a href="#"><img src="images/logo.png" alt="" style="width:60px"></a>
                                    </div>
                                    <h4 class="text-center mb-4 text-white">Sign in your account</h4>

                                    <form asp-controller="Account" asp-action="Login" method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="form-group">
                                            <label class="mb-1 text-white" asp-for="Email"><strong>Email</strong></label>
                                            <input type="email" class="form-control" asp-for="Email" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="mb-1 text-white" asp-for="Password"><strong>Password</strong></label>
                                            <input asp-for="Password" class="form-control" type="password" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-row d-flex justify-content-between mt-4 mb-2">
                                            <div class="form-group">
                                                <div class="custom-control custom-checkbox ml-1 text-white">
                                                    <input class="form-check-input" asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                                                </div>
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            <button type="submit" class="btn bg-white text-primary btn-block">Sign In</button>
                                        </div>
                                        @*<div class="form-group">
                                        <input type="submit" value="Login" class="btn btn-primary" />
                                        </div>*@
                                    </form>
                                    <div class="new-account mt-3">
                                        <p class="text-white">Don't have an account? <a class="text-white" asp-action="Register" asp-controller="Account">Sign up</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!--**********************************
        Scripts
    ***********************************-->
    <!-- Required vendors -->
    <script src="~/js/global.min.js"></script>
   @* <script src="~/vendor/bootstrap-select/dist/js/bootstrap-select.min.js"></script>*@
    <script src="~/js/custom.min.js"></script>
    <script src="~/js/deznav-init.js"></script>



@section Scripts {
    @*<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
*@
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.23/dist/sweetalert2.all.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.23/dist/sweetalert2.min.css" rel="stylesheet">
    <script>
        $(document).ready(function () {
            alert('hi')
            @if (TempData.ContainsKey("Registerd"))
            {
                <text>
                    Swal.fire({
                        title: 'Success!',
                        text: 'Register Successfully Done',
                        icon: 'success'
                    });
                </text>
            }
                    }
    </script>
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
}
    </body>
</html>
