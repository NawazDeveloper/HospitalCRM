@model App.Models.ViewModel.DashboardViewModel

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--**********************************
            Content body start
        ***********************************-->
<div class="content-body">
    <!-- row -->
    <div class="container-fluid">
        <div class="form-head align-items-center d-flex mb-sm-4 mb-3">
            <div class="mr-auto">
                <h2 class="text-black font-w600">Users</h2>
                <!-- <p class="mb-0">Hospital Admin Dashboard Template</p> -->
            </div>
            <div>
                @* <a asp-controller="Patient" asp-action="Create" class="btn btn-primary mr-3" data-target="#addOrderModal">+New User</a> *@
                <!-- <a href="patient-particular.html" class="btn btn-primary mr-3" data-toggle="modal" data-target="#addOrderModal">+New Patient</a> -->
                @* <a href="#" class="btn btn-outline-primary"><i class="las la-calendar-plus scale5 mr-3"></i>Filter Date</a>*@
            </div>
        </div>
        <!-- Add Order -->
        <div class="modal fade" id="addOrderModal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Add Users</h5>
                        <button type="button" class="close" data-dismiss="modal">
                            <span>&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">

                        @* @Html.Partial("_Register") *@
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="table-responsive card-table">
                    <table id="example5" class="display dataTablesCard white-border table-responsive-xl">
                        <thead>
                            <tr>
                             
                                <th>
                                    User Name
                                </th>
                                <th>
                                    Approval Status
                                </th>
                                <th>
                                    Roles
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.UserList)
                            {
                                <tr>
                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsApproved)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Roles)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("EditUser", "Admin",  new { userId = item.UserId })" class="btn btn-primary shadow btn-xs sharp mr-1" ><i class="fa fa-pencil"></i></a>
                                        |<a href="@Url.Action("Delete", "Admin",  new { userId = item.UserId })" class="btn btn-danger shadow btn-xs sharp"><i class="fa fa-trash"></i></a>
                                        
                                        
                                    </td>
                                </tr>
                            }
                        </tbody>
                        </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!--**********************************
    Content body end
***********************************-->
@section scripts {
    <!-- Datatable -->
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/datatables.init.js"></script>

}

