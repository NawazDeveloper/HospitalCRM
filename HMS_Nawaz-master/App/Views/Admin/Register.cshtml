@model App.Models.Identity.UserRegistrationModel

@{
    ViewData["Title"] = "Registration";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en" class="h-100">

<style>
    body {
        background-image: url('images/register-bg.jpg');
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        overflow: hidden;
    }
</style>

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>AMU - Medical CRM</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="images/favicon.png">
    <link href="css/style.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&amp;family=Roboto:wght@100;300;400;500;700;900&amp;display=swap" rel="stylesheet">
</head>

<body class="h-100">
    <div class="authincation h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
                                    <div class="text-center mb-3">
                                        <a href="#"><img src="images/logo.png" alt="" style="width:60px;"></a>
                                    </div>
                                    <h4 class="text-center mb-4 text-white">Sign up your account</h4>
                                    <form asp-action="Register">
                                        <div asp-validation-summary="ModelOnly" class="text-danger">
                                            @Html.ValidationSummary()
                                        </div>
                                        <div class="form-group">
                                            <label class="mb-1 text-white"><strong>First Name</strong></label>
                                            <input asp-for="FirstName" type="text" class="form-control" />
                                            <span asp-validation-for="FirstName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="mb-1 text-white"><strong>Last Name</strong></label>
                                            <input asp-for="LastName" type="text" class="form-control" />
                                            <span asp-validation-for="LastName" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="mb-1 text-white"><strong>Email</strong></label>
                                            <input asp-for="Email" type="text" class="form-control" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="mb-1 text-white"><strong>Password</strong></label>
                                            <input asp-for="Password" type="text" class="form-control" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label class="mb-1 text-white"><strong>Confirm Password</strong></label>
                                            <input asp-for="ConfirmPassword" type="text" class="form-control" />
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" class="btn bg-white  btn-block" style="color: #2767c4;">Create</button>
                                        </div>
                                    </form>

                                    @*<form asp-action="Register">
                                    <div class="form-group">
                                    <label class="mb-1 text-white"><strong>Username</strong></label>
                                    <input type="text" class="form-control" placeholder="username">
                                    </div>
                                    <div class="form-group">
                                    <label class="mb-1 text-white"><strong>Email</strong></label>
                                    <input type="email" class="form-control" placeholder="hello@example.com">
                                    </div>
                                    <div class="form-group">
                                    <label class="mb-1 text-white"><strong>Password</strong></label>
                                    <input type="password" class="form-control" value="Password">
                                    </div>
                                    <div class="text-center mt-4">
                                    <button type="submit" class="btn bg-white text-primary btn-block">SignUp</button>
                                    </div>
                                    </form>*@
                                    <div class="new-account mt-3">
                                        <p class="text-white">Already have an account? <a class="text-white" asp-action="Login">Sign in</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!--**********************************
        Scripts
    ***********************************-->
    <!-- Required vendors -->
    <script src="~/js/global.min.js"></script>
    <script src="vendor/bootstrap-select/dist/js/bootstrap-select.min.js"></script>
    <script src="js/custom.min.js"></script>
    <script src="js/deznav-init.js"></script>

</body>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

</html>